{{#partial "content"}}

    <p>Team Name</p>
    <p>+ {{ team.teamName }}</p>
    <p>Team Description</p>
    <p>+ {{ team.teamDescription }}</p>
    <p>Team Members</p>

    {{#if teamMembers}}
        {{#each teamMembers}}
            <li>+ <a href="/teammember/{{id}}">{{name}}</a></li>
        {{/each}}
        <li>Add a Team Member</li>
        <form action="/team/{{id}}" method="post">
            <input type="text" id="teamMember" name="teamMember">

    {{else}}
        <form action="/team/{{id}}" method="post">
            <input type="text" id="teamMember" name="teamMember">
    {{/if}}
        <button class="btn btn-success" type="submit">Add</button>
        </form>

    <a href="/team/{{team.id}}/update">Update team name or add more team members</a><br>
    <a href="/team/{{team.id}}/delete">Delete</a><br>
    <a href="/">back to home</a>

{{/partial}}

{{> layout.hbs}}